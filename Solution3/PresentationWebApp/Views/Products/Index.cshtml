@model IEnumerable<ShoppingCart.Application.ViewModels.ProductViewModel>

@{ ViewData["Title"] = "Index"; }

<h1>Products Catalogue</h1>

<div class="container">
    <div class="row">


        <div class="col">
            @Html.Partial("SearchPartial")
        </div>
        <div class="col">
            @Html.Partial("CategoryFilterPartial")



        </div>

    </div>

</div>


@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{


<a class="nav-link dropdown-toggle rounded-pill" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="fas fa-sign-in-alt fa-2x" style="color: white"></i>
</a>
                <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                    <a class="text-white dropdown-item bg-transparent" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
                    <form class="form-inline dropdown-item bg-transparent" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-white dropdown-item bg-transparent">Logout</button>
                    </form>

                </div> 
                }
else
{
<a class="nav-link dropdown-toggle rounded-pill" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="fas fa-sign-in-alt fa-2x" style="color: white"></i>
</a>
<div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
    
        <a class="text-white dropdown-item bg-dark " asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="text-white dropdown-item bg-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    
</div>
}